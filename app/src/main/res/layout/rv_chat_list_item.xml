<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@drawable/logo_corners"
    android:layout_margin="5dp"

    android:elevation="5dp"
    >

    <ImageView
        android:id="@+id/ivChatUlProfileImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/tvChatUlDisplayName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Display Name"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/ivChatUlProfileImage"
        app:layout_constraintTop_toTopOf="@id/ivChatUlProfileImage"
        android:paddingHorizontal="16dp"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@id/tvChatUlLastMessage"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvChatUlLastMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:text="Last Message"
        app:layout_constraintStart_toEndOf="@+id/ivChatUlProfileImage"
        app:layout_constraintTop_toBottomOf="@+id/tvChatUlDisplayName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/ivChatUlProfileImage"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
